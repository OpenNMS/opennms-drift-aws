{
  "variables": {
    "region": "us-east-2",
    "source_ami": "ami-5e8bb23b",
    "app_name": "ScyllaDB 2.3.x",
    "environment": "Drift"
  },
  "description": "{{ user `app_name` }} for {{ user `environment` }}",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `region` }}",
      "source_ami": "{{ user `source_ami` }}",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "scylladb-drift-{{ timestamp }}",
      "ami_description": "{{ user `app_name` }} for {{ user `environment` }}",
      "run_tags": {
        "Name": "Packer AMI {{ user `app_name` }}",
        "Environment": "{{ user `environment` }}"
      },
      "tags": {
        "Name": "{{ user `app_name` }}",
        "Environment": "{{ user `environment` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/kernel.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/scylladb.sh"
    }
  ]
}
