{
  "variables": {
    "region": "us-east-2",
    "source_ami": "ami-31c7f654",
    "app_name": "PostgreSQL 9.6",
    "environment": "Drift"
  },
  "description": "{{ user `app_name` }} for {{ user `environment` }}",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `region` }}",
      "source_ami": "{{ user `source_ami` }}",
      "instance_type": "t2.medium",
      "ssh_username": "ec2-user",
      "ami_name": "postgresql-drift-{{ timestamp }}",
      "run_tags": {
        "Name": "Packer AMI {{ user `app_name` }}",
        "Environment": "{{ user `environment` }}"
      },
      "snapshot_tags": {
        "Name": "{{ user `app_name` }}",
        "Environment": "{{ user `environment` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/common.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/postgresql.sh"
    }
  ]
}
